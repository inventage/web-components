{
  "private": true,
  "name": "@inventage-web-components/root",
  "description": "A collection of webcomponents for enterprise portals.",
  "license": "MIT",
  "scripts": {
    "analyze": "npm run --workspaces --if-present analyze",
    "postanalyze": "npm run format:package-json",
    "analyze:wca": "wca analyze 'packages/*/src/**/*.ts' --outFile custom-elements-experimental.json",
    "build": "run-s build:*",
    "build:css": "./scripts/build-styles.sh",
    "build:tsc": "tsc -b tsconfig.build.json",
    "clean": "run-p clean:*",
    "clean:analyze": "rimraf '**/custom-elements*.json'",
    "clean:cache": "rimraf 'packages/*/lib' 'packages/*/lib/tsconfig.tsbuildinfo' './tsconfig.build-types.tsbuildinfo'",
    "clean:css": "rimraf 'packages/**/*-css.ts'",
    "clean:packages": "rimraf *.tgz 'packages/*/*.tgz'",
    "format": "run-s -l format:*",
    "format:eslint": "eslint --ext .js,.ts,.html . --fix",
    "format:package-json": "prettier-package-json --write package.json && find . -name 'package.json' ! -path './node_modules/*' | xargs -I {} npx prettier-package-json --write {}",
    "format:prettier": "prettier '**/*.{js,ts,md,css}' '**/tsconfig*.json' --write",
    "get-ready": "npm run clean && npm run build:css",
    "postinstall": "npm run get-ready",
    "lint": "run-p -l lint:*",
    "lint:eslint": "eslint --ext .js,.ts,.html .",
    "lint:markdown": "git ls-files '*.md' | xargs markdownlint --ignore '**/CHANGELOG.md' --ignore '.changeset/**.md'",
    "lint:package-json": "prettier-package-json --list-different package.json packages/*/package.json",
    "lint:prettier": "prettier '**/*.{js,ts,md,css}' '**/tsconfig*.json' --check",
    "prelint:types": "npm run build:css",
    "lint:types": "tsc -b tsconfig.build-types.json",
    "prepare": "is-ci || husky install",
    "release": "is-ci && changeset publish",
    "remove-node-modules": "rimraf node_modules 'packages/*/node_modules'",
    "start": "npm run storybook",
    "storybook": "npm run build && npm run analyze:wca && run-p -l storybook:start watch:tsc watch:css watch:wca",
    "storybook:build": "npm run build && build-storybook",
    "poststorybook:build": "cp -Rpf data storybook-static/",
    "storybook:start": "web-dev-server --config web-dev-server-storybook.config.mjs",
    "syncpack": "run-s syncpack:*",
    "syncpack:mismatches": "syncpack list-mismatches",
    "syncpack:versions": "syncpack set-semver-ranges",
    "pretest": "npm run build",
    "test": "wtr",
    "test:watch": "npm run build && run-p -r watch:tsc watch:css 'test -- --watch'",
    "watch:css": "onchange '**/*.scss' --exclude-path .gitignore -- npm run build:css",
    "watch:tsc": "npm run build:tsc -- --watch --preserveWatchOutput",
    "watch:wca": "onchange 'packages/*/src/**/*.ts' --exclude-path .gitignore -- npm run analyze:wca"
  },
  "workspaces": [
    "packages/*",
    "plugins/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.16.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@open-wc/lit-helpers": "^0.3.12",
    "@open-wc/testing": "^2.5.33",
    "@rollup/plugin-json": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "@web/dev-server": "^0.1.20",
    "@web/dev-server-rollup": "^0.3.8",
    "@web/dev-server-storybook": "^0.3.7",
    "@web/storybook-prebuilt": "^0.1.22",
    "@web/test-runner": "^0.13.15",
    "commitlint-plugin-workspace-scopes": "^1.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-lit": "^1.5.1",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "is-ci": "^3.0.0",
    "lint-staged": "^11.1.2",
    "lit-html": "^1.4.1",
    "markdownlint-cli": "^0.28.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "prettier": "2.3.2",
    "prettier-package-json": "2.6.0",
    "rimraf": "^3.0.2",
    "syncpack": "^5.8.14",
    "ts-lit-plugin": "^1.2.1",
    "typescript": "^4.3.5",
    "web-component-analyzer": "^1.1.6"
  },
  "engines": {
    "node": ">=15",
    "npm": "^7"
  },
  "customElements": "custom-elements.json",
  "lint-staged": {
    "*.{js,ts,css}": [
      "prettier --write"
    ],
    "tsconfig*.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write",
      "markdownlint --ignore '**/CHANGELOG.md'  --ignore '.changeset/**.md'"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}
