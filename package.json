{
  "private": true,
  "name": "@inventage-web-components/root",
  "version": "0.0.1-alpha.0",
  "description": "A collection of webcomponents for enterprise portals.",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "analyze": "npm run --if-present -ws analyze",
    "postanalyze": "npm run format:prettier-package-json",
    "build": "run-s build:*",
    "build:css": "./scripts/build-styles.sh",
    "build:tsc": "tsc -b tsconfig.build.json",
    "build:wca": "wca analyze 'packages/*/src/**/*.ts' --outFile custom-elements-experimental.json",
    "clean": "run-p clean:*",
    "clean:analyze": "rimraf '**/custom-elements*.json'",
    "clean:cache": "rimraf 'packages/*/lib' 'packages/*/lib/tsconfig.tsbuildinfo' './tsconfig.build-types.tsbuildinfo'",
    "clean:css": "rimraf 'packages/**/*-css.ts'",
    "clean:packages": "rimraf *.tgz 'packages/*/*.tgz'",
    "format": "run-s -l format:*",
    "format:eslint": "eslint --ext .js,.ts,.html . --fix",
    "format:prettier": "prettier '**/*.{js,ts,md,css}' '**/tsconfig*.json' --write",
    "format:prettier-package-json": "prettier-package-json --write package.json && find . -name 'package.json' ! -path './node_modules/*' | xargs -I {} npx prettier-package-json --write {}",
    "get-ready": "npm run clean && npm run build:css",
    "postinstall": "npm run get-ready",
    "lint": "run-p -l lint:*",
    "lint:eslint": "eslint --ext .js,.ts,.html .",
    "lint:markdownlint": "git ls-files '*.md' | xargs markdownlint --ignore '**/CHANGELOG.md'",
    "lint:prettier": "prettier '**/*.{js,ts,md,css}' '**/tsconfig*.json' --check",
    "lint:prettier-package-json": "prettier-package-json --list-different package.json packages/*/package.json",
    "prelint:types": "npm run build:css",
    "lint:types": "tsc -b tsconfig.build-types.json",
    "prepare": "is-ci || husky install",
    "release": "sh scripts/release.sh",
    "postrelease": "npm run get-ready",
    "release:prerelease": "sh scripts/prerelease.sh",
    "remove-node-modules": "rimraf node_modules 'packages/*/node_modules'",
    "start": "npm run storybook",
    "storybook": "npm run build && run-p -l storybook:start watch:tsc watch:css",
    "storybook:build": "npm run build && build-storybook",
    "storybook:start": "web-dev-server --config web-dev-server-storybook.config.mjs",
    "syncpack": "run-s syncpack:*",
    "syncpack:mismatches": "syncpack list-mismatches",
    "syncpack:versions": "syncpack set-semver-ranges",
    "test": "npm run test:browser",
    "test:browser": "npm run build && wtr --coverage",
    "test:watch": "npm run build && concurrently -k -r 'npm run watch:tsc' 'wtr --watch'",
    "watch:css": "onchange '**/*.scss' --exclude-path .gitignore -- npm run build:css",
    "watch:tsc": "npm run build:tsc -- --watch --preserveWatchOutput"
  },
  "workspaces": [
    "packages/*",
    "plugins/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.16.0",
    "@custom-elements-manifest/analyzer": "^0.4.16",
    "@open-wc/lit-helpers": "^0.3.12",
    "@open-wc/testing": "^2.5.33",
    "@rollup/plugin-json": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "@web/dev-server": "^0.1.20",
    "@web/dev-server-rollup": "^0.3.8",
    "@web/dev-server-storybook": "^0.3.7",
    "@web/storybook-prebuilt": "^0.1.22",
    "@web/test-runner": "^0.13.15",
    "concurrently": "^6.2.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-lit": "^1.5.1",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "is-ci": "^3.0.0",
    "lint-staged": "^11.1.1",
    "lit-html": "^1.4.1",
    "markdownlint-cli": "^0.28.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "prettier": "2.3.2",
    "prettier-package-json": "2.6.0",
    "rimraf": "^3.0.2",
    "syncpack": "^5.8.14",
    "ts-lit-plugin": "^1.2.1",
    "typescript": "^4.3.5",
    "web-component-analyzer": "^1.1.6"
  },
  "engines": {
    "node": ">=15",
    "npm": "^7"
  },
  "customElements": "custom-elements.json",
  "lint-staged": {
    "*.{js,ts,css}": [
      "prettier --write"
    ],
    "tsconfig*.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write",
      "markdownlint --ignore '**/CHANGELOG.md'"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}
