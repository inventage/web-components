{
  "private": true,
  "name": "@inventage-components/root",
  "version": "0.0.1-alpha.0",
  "description": "A collection of webcomponents for enterprise portals.",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run build:css && tsc -b tsconfig.build.json",
    "build:css": "./scripts/build-styles.sh",
    "clean": "rimraf 'packages/**/lib' 'packages/**/*.tgz' 'packages/**/*.tsbuildinfo'",
    "format": "npm run format:prettier",
    "format:eslint": "eslint --ext .js,.ts,.html . --fix",
    "format:prettier": "prettier '**/*.{js,ts,md,css}' --write",
    "format:prettier-package-json": "prettier-package-json --write package.json packages/*/package.json",
    "lint": "run-p -l lint:*",
    "lint:eslint": "eslint --ext .js,.ts,.html .",
    "lint:markdownlint": "git ls-files '*.md' | xargs markdownlint --ignore '**/CHANGELOG.md'",
    "lint:prettier": "prettier '**/*.{js,ts,md,css}' --check",
    "lint:prettier-package-json": "prettier-package-json --list-different package.json packages/*/package.json",
    "prepare": "husky install",
    "test": "npm run test -ws"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-lit": "^1.5.1",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.0.0",
    "markdownlint-cli": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "prettier-package-json": "^2.6.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": ">=15",
    "npm": "^7"
  },
  "lint-staged": {
    "*.{js,ts,css}": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write",
      "markdownlint --ignore '**/CHANGELOG.md'"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}
