{
  "name": "@inventage-web-components/common",
  "version": "0.4.3",
  "description": "Shared, common functionality for @inventage-web-components packages.",
  "license": "MIT",
  "author": "Inventage AG <info@inventage.com>",
  "homepage": "https://github.com/inventage/web-components/tree/main/packages/common#readme",
  "repository": {
    "url": "inventage/web-components",
    "directory": "packages/common"
  },
  "bugs": "https://github.com/inventage/web-components/issues",
  "type": "module",
  "main": "lib/src/index.js",
  "module": "lib/src/index.js",
  "files": [
    "lib/src/**/*.d.ts",
    "lib/src/**/*.js",
    "lib/src/**/*.js.map"
  ],
  "scripts": {
    "build": "rimraf lib && tsc -b .",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: run tests from mono-repo root.\" && exit 1"
  },
  "sideEffects": false,
  "types": "lib/src/index.d.ts",
  "dependencies": {
    "lit": "^2.2.5"
  },
  "keywords": [
    "lit",
    "lit-element",
    "lit-html",
    "portal",
    "web-components"
  ],
  "publishConfig": {
    "access": "public"
  },
  "customElements": "custom-elements.json",
  "exports": {
    ".": "./lib/src/index.js",
    "./lib/src/*": "./lib/src/*",
    "./decorators": "./lib/src/decorators.js",
    "./decorators.js": "./lib/src/decorators.js",
    "./directives": "./lib/src/directives.js",
    "./directives.js": "./lib/src/directives.js",
    "./html": "./lib/src/html.js",
    "./html.js": "./lib/src/html.js"
  }
}
