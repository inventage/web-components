{
  "private": true,
  "name": "@inventage-components/root",
  "version": "0.0.1-alpha.0",
  "description": "A collection of webcomponents for enterprise portals.",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && run-s build:*",
    "build:css": "./scripts/build-styles.sh",
    "build:tsc": "tsc -b tsconfig.build.json",
    "clean": "rimraf 'packages/*/lib' 'packages/*/*.tgz' 'packages/*/*.tsbuildinfo' './*.tsbuildinfo'",
    "format": "npm run format:prettier",
    "format:eslint": "eslint --ext .js,.ts,.html . --fix",
    "format:prettier": "prettier '**/*.{js,ts,md,css}' --write",
    "format:prettier-package-json": "prettier-package-json --write package.json && find packages -name 'package.json' | xargs -I {} npx prettier-package-json --write {}",
    "lint": "run-p -l lint:*",
    "lint:eslint": "eslint --ext .js,.ts,.html .",
    "lint:markdownlint": "git ls-files '*.md' | xargs markdownlint --ignore '**/CHANGELOG.md'",
    "lint:prettier": "prettier '**/*.{js,ts,md,css}' --check",
    "lint:prettier-package-json": "prettier-package-json --list-different package.json packages/*/package.json",
    "lint:types": "tsc -b tsconfig.build-types.json",
    "prepare": "husky install",
    "syncpack": "run-s syncpack:*",
    "syncpack:mismatches": "syncpack list-mismatches",
    "syncpack:versions": "syncpack set-semver-ranges",
    "test": "npm run build && npm run test:browser",
    "test-esbuild": "npm run clean && wtr --config web-test-runner.config-esbuild.mjs",
    "test:browser": "wtr"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@open-wc/testing": "^2.5.33",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "@web/dev-server-esbuild": "^0.2.12",
    "@web/test-runner": "^0.13.13",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-lit": "^1.5.1",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.0",
    "markdownlint-cli": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "prettier-package-json": "^2.6.0",
    "rimraf": "^3.0.2",
    "shx": "^0.3.3",
    "syncpack": "^5.7.11",
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": ">=15",
    "npm": "^7"
  },
  "lint-staged": {
    "*.{js,ts,css}": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write",
      "markdownlint --ignore '**/CHANGELOG.md'"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}
