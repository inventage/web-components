{
  "private": true,
  "name": "@inventage-web-components/root",
  "description": "A collection of webcomponents for enterprise portals.",
  "license": "MIT",
  "scripts": {
    "analyze": "npm run --workspaces --if-present analyze",
    "postanalyze": "npm run format:package-json",
    "analyze:cem": "cem analyze",
    "build": "run-s build:*",
    "build:css": "./scripts/build-styles.sh",
    "build:tsc": "tsc -b tsconfig.build.json",
    "clean": "run-p clean:*",
    "clean:analyze": "rimraf '**/custom-elements*.json'",
    "clean:cache": "rimraf '{packages,plugins}/*/lib' '{packages,plugins}/*/lib/tsconfig.tsbuildinfo' './tsconfig.build-types.tsbuildinfo'",
    "clean:css": "rimraf 'packages/**/*-css.ts'",
    "clean:packages": "rimraf *.tgz '{packages,plugins}/*/*.tgz'",
    "commit": "cz",
    "format": "run-s -l format:*",
    "format:eslint": "eslint --ext .js,.ts,.html . --fix",
    "format:package-json": "prettier-package-json --write package.json && find . -name 'package.json' ! -path './node_modules/*' | xargs -I {} npx prettier-package-json --write {}",
    "format:prettier": "prettier '**/*.{cjs,mjs,js,ts,md,css}' '**/tsconfig*.json' '**/*.schema*.json' --write",
    "get-ready": "npm run clean && npm run build:css",
    "postinstall": "npm run get-ready",
    "lint": "run-p -l lint:* && npm run --workspaces --if-present lint && npm run syncpack:mismatches",
    "lint:eslint": "eslint --ext .js,.ts,.html .",
    "lint:markdown": "git ls-files '*.md' | xargs markdownlint --ignore '**/CHANGELOG.md' --ignore '.changeset/**.md'",
    "lint:package-json": "prettier-package-json --list-different package.json '{packages,plugins}/*/package.json'",
    "lint:prettier": "prettier '**/*.{cjs,mjs,js,ts,md,css}' '**/tsconfig*.json' '**/*.schema*.json' --check",
    "prelint:types": "npm run build:css",
    "lint:types": "tsc -b tsconfig.build-types.json",
    "prepare": "is-ci || husky install",
    "release": "is-ci &&  sh scripts/publish.sh",
    "remove-node-modules": "rimraf node_modules '{packages,plugins}/*/node_modules'",
    "start": "npm run storybook",
    "storybook": "npm run build && npm run analyze:cem && run-p -l storybook:start watch:*",
    "storybook:build": "npm run build && npm run analyze:cem && build-storybook",
    "poststorybook:build": "cpy 'packages/*/data/**/*' storybook-static/data/",
    "storybook:start": "web-dev-server --config web-dev-server-storybook.config.mjs",
    "syncpack": "run-s syncpack:*",
    "syncpack:mismatches": "syncpack list-mismatches",
    "syncpack:versions": "syncpack set-semver-ranges",
    "test": "npm run build && wtr",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run build && run-p -r watch:tsc watch:css 'test -- --watch'",
    "version": "is-ci && sh scripts/version.sh",
    "watch:css": "onchange '**/*.css' --exclude-path .gitignore -- npm run build:css",
    "watch:tsc": "npm run build:tsc -- --watch --preserveWatchOutput",
    "watch:wca": "onchange 'packages/*/src/**/*.ts' --exclude-path .gitignore -- npm run analyze:cem"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "workspaces": [
    "packages/*",
    "plugins/*"
  ],
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.1",
    "@changesets/cli": "^2.17.0",
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@commitlint/cz-commitlint": "^13.2.1",
    "@custom-elements-manifest/analyzer": "^0.5.6",
    "@open-wc/testing": "^2.5.33",
    "@rollup/plugin-json": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "@web/dev-server": "^0.1.25",
    "@web/dev-server-rollup": "^0.3.11",
    "@web/dev-server-storybook": "^0.3.8",
    "@web/storybook-prebuilt": "^0.1.27-alpha.0",
    "@web/test-runner": "^0.13.20",
    "commitlint-plugin-workspace-scopes": "^1.1.0",
    "cpy-cli": "^3.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "escape-string-regexp": "^5.0.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-lit": "^1.6.1",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-prettier": "^4.0.0",
    "github-markdown-css": "^5.0.0",
    "globby": "^11.0.4",
    "highlight.js": "^11.3.1",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "lint-staged": "^11.2.4",
    "lit-html": "^1.4.1",
    "markdownlint-cli": "^0.29.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "prettier": "^2.4.1",
    "prettier-package-json": "^2.6.0",
    "replace-in-file": "^6.3.2",
    "rimraf": "^3.0.2",
    "syncpack": "^5.8.15",
    "ts-lit-plugin": "^1.2.1",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": ">=15",
    "npm": ">=7"
  },
  "customElements": "custom-elements.json",
  "lint-staged": {
    "*.{js,ts,css}": [
      "prettier --write"
    ],
    "tsconfig*.json": [
      "prettier --write"
    ],
    "*.schema*.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write",
      "markdownlint --ignore '**/CHANGELOG.md'  --ignore '.changeset/**.md'"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}
