{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Configuration",
  "description": "A configuration for the portal-navigation",
  "type": "object",
  "required": ["menus"],
  "properties": {
    "menus": {
      "description": "Menus descâ€¦",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "enum": ["main", "settings", "meta", "profile", "logout"]
          },
          "dropdown": {
            "type": "boolean"
          },
          "icon": {
            "type": "string"
          },
          "items": {
            "type": "array",
            "minItems": 1,
            "items": {
              "$ref": "#/$defs/menuItem"
            }
          }
        }
      }
    }
  },
  "$defs": {
    "label": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^[a-z]{2}$": {
              "type": "string"
            }
          }
        }
      ]
    },
    "menuItem": {
      "type": "object",
      "additionalProperties": false,
      "oneOf": [
        {
          "required": ["label"]
        },
        {
          "required": ["icon"]
        }
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "defaultItem": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "application": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        },
        "destination": {
          "type": "string"
        },
        "internalRouting": {
          "type": "boolean"
        },
        "internalRoutingApplications": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "label": {
          "$ref": "#/$defs/label"
        },
        "items": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/menuItem"
          }
        }
      }
    }
  }
}
